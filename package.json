{
    "name": "esbuild-clean-plugin",
    "version": "1.0.0",
    "description": "An esbuild plugin to clean your build folder.",
    "author": "Jonathan Wilsson <jonathan.wilsson@gmail.com>",
    "keywords": [
        "esbuild",
        "plugin",
        "clean"
    ],
    "type": "module",
    "exports": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "lint": "eslint src test",
        "prepublishOnly": "npm run build",
        "pretest": "npm run lint",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "engines": {
        "node": ">=20.9.0"
    },
    "dependencies": {
        "del": "^8.0.0"
    },
    "devDependencies": {
        "@jwilsson/eslint-config": "^9.0.0",
        "@jwilsson/prettier-config": "^9.0.0",
        "@jwilsson/tsconfig": "^1.3.0",
        "@types/jest": "^29.2.1",
        "esbuild": "^0.14.0",
        "eslint": "^9.17.0",
        "jest": "^29.2.2",
        "prettier": "^3.0.0",
        "simple-git-hooks": "^2.4.1",
        "tempy": "^3.0.0",
        "ts-jest": "^29.0.3",
        "typescript": "^4.5.2"
    },
    "peerDependencies": {
        "esbuild": ">=0.11.18"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.ts": "prettier --write src test"
    },
    "jest": {
        "collectCoverage": true,
        "moduleNameMapper": {
            "./CleanPlugin.js": "./CleanPlugin.ts"
        },
        "preset": "ts-jest/presets/default-esm",
        "testEnvironment": "node",
        "testMatch": [
            "<rootDir>/test/**/*.ts"
        ],
        "verbose": true
    },
    "prettier": "@jwilsson/prettier-config",
    "license": "MIT"
}
