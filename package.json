{
    "name": "esbuild-clean-plugin",
    "version": "1.0.0",
    "description": "An esbuild plugin to clean your build folder.",
    "author": "Jonathan Wilsson <jonathan.wilsson@gmail.com>",
    "keywords": [
        "esbuild",
        "plugin",
        "clean"
    ],
    "type": "module",
    "exports": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "lint": "eslint src test",
        "prepublishOnly": "npm run build",
        "pretest": "npm run lint",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "engines": {
        "node": ">=14.15.0"
    },
    "dependencies": {
        "del": "^7.0.0"
    },
    "devDependencies": {
        "@jwilsson/eslint-config-prettier": "^7.1.0",
        "@jwilsson/eslint-config-typescript": "^7.1.0",
        "@jwilsson/prettier-config": "^7.2.0",
        "@jwilsson/tsconfig": "^1.3.0",
        "@types/jest": "^29.2.1",
        "esbuild": "^0.14.0",
        "eslint": "^8.1.0",
        "jest": "^29.2.2",
        "prettier": "^2.3.0",
        "simple-git-hooks": "^2.4.1",
        "tempy": "^3.0.0",
        "ts-jest": "^29.0.3",
        "typescript": "^4.5.2"
    },
    "peerDependencies": {
        "esbuild": "^0.24.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.ts": "prettier --write src test"
    },
    "eslintConfig": {
        "extends": [
            "@jwilsson/eslint-config-typescript",
            "@jwilsson/eslint-config-prettier"
        ],
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "parserOptions": {
                    "project": [
                        "./tsconfig.json"
                    ]
                }
            }
        ],
        "rules": {
            "@typescript-eslint/strict-boolean-expressions": "off"
        },
        "env": {
            "jest": true
        }
    },
    "jest": {
        "collectCoverage": true,
        "moduleNameMapper": {
            "./CleanPlugin.js": "./CleanPlugin.ts"
        },
        "preset": "ts-jest/presets/default-esm",
        "testEnvironment": "node",
        "testMatch": [
            "<rootDir>/test/**/*.ts"
        ],
        "verbose": true
    },
    "prettier": "@jwilsson/prettier-config",
    "license": "MIT"
}
